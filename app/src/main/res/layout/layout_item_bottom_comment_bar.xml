<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comment_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center_vertical|right"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_comment_bar_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/comment_bar_comment" />

        <TextView
            android:id="@+id/tv_comment_bar_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top|end"
            android:text="@string/tv_filled_string"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_comment_bar_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp">

        <CheckBox
            android:id="@+id/cb_comment_bar_like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/selector_comment_bar_like"
            android:button="@null"
            android:clickable="false" />

        <TextView
            android:id="@+id/tv_comment_bar_like_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top|end"
            android:text="@string/tv_filled_string"
            android:textSize="10dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ll_comment_bar_share"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@drawable/comment_bar_share" />
</LinearLayout>