<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#FFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_home_page_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_home_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="一个 VOL.2080" />

        <ImageView
            android:id="@+id/iv_home_page_check_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/expend_menu_down" />

    </LinearLayout>


    <com.esioner.oneread.view.MyListView
        android:id="@+id/lv_home_page_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:visibility="gone">

    </com.esioner.oneread.view.MyListView>
</LinearLayout>