<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/tv_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="- ONE STORY - "
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_content_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="混圈艺术家"
            android:textColor="#99000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content_item_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="文 / 单桐兴" />

        <!--android:layout_width="330dp"-->
        <!--android:layout_height="220dp"-->

        <ImageView
            android:id="@+id/iv_content_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_content_item_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="如果要让一个人的负罪感完全消失，就去找他帮忙。"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_content_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:text="电影:小丑回魂"
            android:textSize="14dp"
            android:visibility="gone" />
    </LinearLayout>

</android.support.v7.widget.CardView>
